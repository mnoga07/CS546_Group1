<h1>{{page_function}}</h1>
{{#if error}}
<h2 id="error">{{error}}</h2>
{{/if}}

<h2>Completed Orders</h2>
{{#if orders.length}}
{{#each orders}}
    <p>User: {{userName}}</p>
    <p>Delivery Address: {{deliveryAddress}}</p>
    <p>Ordered Items:</p>
    <ul>
        {{#each itemsOrdered}}
            <li>{{itemName}}</li>
            {{#if customizableComponents.length}}
            <ul>
                {{#each customizableComponents}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        {{/each}}
    </ul>
{{/each}}
{{else}}
<h3>There are currently no orders completed!</h3>
{{/if}}

