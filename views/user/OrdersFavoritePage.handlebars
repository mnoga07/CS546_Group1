<div class="ml-4 fav_heading mb-3"><h3 class="mb-0">{{page_function}}</h3></div>

{{#if error}}
<div class="error_div" id="error">{{error}}</div>
{{/if}}


{{#if orders.length}}
{{#each orders}}
<div class="incomp_order_box ml-4 pl-3">

    <div class="row mb-2">
        <div class="col-4 pr-0 font-weight-bold">Items in order:</div>
        <div class="col-8 pl-0"> 
            <ul>
                {{#each itemsOrdered}}
                <li>{{itemName}}</li>
                    {{#if customizableComponents.length}}
                    <li>
                      <ul>
                        {{#each customizableComponents}}
                          <li>{{this}}</li>
                        {{/each}}
                      </ul>
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-3 pr-0 font-weight-bold">Price: </div><div class="col-9 pl-0 texxt_overflow">{{totalPrice}}</div>
    </div>

    <div class="row">
        <form class="col-6" method="GET" id="complete-form-{{_id}}" action="/restaurants/{{restaurant_id}}">
            <label id="submit-{{_id}}">
                <input type="submit" value="Order Now"/>
            </label>
        </form>
        <form class="col-6" method="POST" id="complete-form-favorites-{{_id}}" action="/orders/removeFavorite/{{_id}}/{{../userid}}">
            <label id="submit-favorite-{{_id}}">
                <input type="submit" value="Remove Favorite"/>
            </label>
        </form>
    </div>
</div>
{{/each}}
{{else}}
<div class="ml-4 bottom_message">There are currently no favorites!</div>
{{/if}}

