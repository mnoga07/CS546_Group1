<h1>{{page_function}}</h1>
{{#if error}}
<h2 id="error">{{error}}</h2>
{{/if}}

<h2>Favorites</h2>
{{#if orders.length}}
{{#each orders}}
    <p>Items in order:</p>
    <p>Price: {{totalPrice}}</p>
    <ul>
        {{#each itemsOrdered}}
            <li>{{itemName}}</li>
            {{#if customizableComponents.length}}
            <ul>
                {{#each customizableComponents}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        {{/each}}
    </ul>
    <form method="POST" id="complete-form" action="/orders/addFavorite/{{_id}}/{{../userid}}">
    <label id="submit">
        <input type="submit" value="Order Now"/>
    </label>
    </form>
    <form method="POST" id="complete-form" action="/orders/removeFavorite/{{_id}}/{{../userid}}">
    <label id="submit">
        <input type="submit" value="Remove Favorite"/>
    </label>
    </form>
{{/each}}
{{else}}
<h3>There are currently no favorites!</h3>
{{/if}}

