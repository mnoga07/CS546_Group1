<div class="ml-4 incomp_order_heading heading_font mb-3"><div class="mb-0">{{page_function}}</div></div>

{{#if error}}
<div class="error_div"><h2 id="error">{{error}}</h2></div>
{{/if}}

{{#if orders.length}}
{{#each orders}}
<div class="incomp_order_box mb-3 ml-4 pl-3">
    <div class="row mb-2">
        <div class="col-4 pr-0 font-weight-bold">Delivery Address:</div> <div class="col-8 pl-0 texxt_overflow">{{deliveryAddress}}</div>
    </div>

    <div class="row mb-2">
        <div class="col-4 pr-0 font-weight-bold">Items in cart: </div>
        <div class="col-8 pl-0"> 
            <ul>
            {{#each itemsOrdered}}
                <li>{{itemName}}</li>
                {{#if customizableComponents.length}}
                <li>
                  <ul>
                    {{#each customizableComponents}}
                        <li>{{this}}</li>
                    {{/each}}
                  </ul>
                </li>
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

 
    <div class="row">
        <form class="col-6" method="GET" id="complete-form-{{_id}}" action="/restaurants/{{restaurant_id}}/cart">
            <label id="submit-complete-{{_id}}">
                <input type="submit" value="Finish Ordering"/>
            </label>
        </form>
        <form class="col-6" method="POST" id="delete-form-{{_id}}" action="/orders/delete/{{_id}}/{{../userid}}">
            <label id="submit-remove-{{_id}}">
                <input type="submit" value="Remove Order"/>
            </label>
        </form>
    </div>
</div>
{{/each}}
{{else}}
<div class="ml-4 bottom_message">There are currently no incomplete orders!</div>
{{/if}}

