<div class="ml-4 prof mb-3"><h3 class="mb-0">{{page_function}}</h3></div>

{{#if isManager}}
<div class="pl-4"><h4>Manage Restaurants</h4></div>
  {{#if restaurants.length}}
    {{#each restaurants}}  
    <h1>{{restaurantName}}</h1>
    <div class="pl-4">
      <ul>
        <li class="mb-2">
          <a href="/orders/placed/{{_id}}" class="ord_color">View Placed Orders</a>
        </li>
        <li class="mb-2">
          <a href="/orders/completed/{{_id}}" class="ord_color">View Completed Orders</a>
        </li>
        <li class="mb-2">
          <a href="/restaurants/menu/edit/{{_id}}" class="ord_color">Edit Menu</a>
        </li>
        <li class="mb-2">
          <a href="/restaurants/{{_id}}/reviews" class="ord_color">View Comments</a>
        </li>
      </ul>
    </div>
    {{/each}}
  {{/if}}
{{else}}
<div class="pl-4">
  <section>
    <p id='mb-2'>User Name: {{user.userName}}</p>
    <p id='mb-2'>Street Address: {{user.streetAddress}}</p>
    <p id='mb-2'>City: {{user.city}}</p>
    <p id='mb-2'>State: {{user.state}}</p>
    <p id='mb-2'>Zip: {{user.zip}}</p>
    <p id='mb-2'>Email: {{user.email}}</p>
    <p id='mb-2'>Phone: {{user.phone}}</p>
  </section>
</div>
<div class="pl-4">
  <ul>
    <li clsss="mb-2">
      <a href="user/{{userId}}" class="ord_color">Update Profile</a>
    </li>
    <li class="mb-2">
      <a href="/orders/{{userId}}/incomplete" class="ord_color">View Incomplete Orders</a>
    </li>
    <li class="mb-2">
      <a href="/orders/{{userId}}/placed" class="ord_color">View Placed Orders</a>
    </li>
    <li class="mb-2">
      <a href="/orders/{{userId}}/completed" class="ord_color">View Completed Orders</a>
    </li>
    <li class="mb-2">
      <a href="/orders/{{userId}}/favorites" class="ord_color">View Favorites</a>
    </li>
  </ul>
</div>
{{/if}}

{{#if isManager}}
<div class="pl-4"><a href="/restaurants/create">Need to add a restaurant? Click here!</a></div>
{{else}}
<div class="pl-4"><a href="/restaurants">Ready to order? Click here to find some food!</a></div>
{{/if}}
