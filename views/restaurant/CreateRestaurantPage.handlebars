<h1>{{page_function}}</h1>
  {{#if error}}
    <h2 id="error">{{error}}</h2>
  {{/if}}
  <form method="POST" id="restaurant-form" action="/restaurants/create">
    <label id="name">Restaurant name:
      <input type = "text" name="username" placeholder="Restaurant name"/>
    </label>
    <br>
    <label id="streetAddress">Street Address:
      <input type = "text" name="streetAddress" placeholder="Street Address"/>
    </label>
    <br>
    <label id="city">City:
      <input type = "text" name="city" placeholder="City"/>
    </label>
    <br>
    <!--TODO: change to dropdown -->
    <label id="state">State:
      <input type = "text" name="state" placeholder="State"/>
    </label>
    <br>
    <label id="zip">Zip:
      <input type = "text" name="zip" placeholder="Zip"/>
    </label>
    <br>
    <label id="email">Email:
      <input type = "text" name="email" placeholder="Email"/>
    </label>
    <br>
    <label id="phone">Phone:
      <input type = "text" name="phone" placeholder="123-456-7890"/>
    </label>
    <br>

    <label for="priceRange">Choose a price range:</label>
    <select name="priceRange" id="priceRange">
      <option value="$">$</option>
      <option value="$$">$$</option>
      <option value="$$$">$$$</option>
      <option value="$$$$">$$$$</option>
    </select>
    <br>

    <p>Select Restaurant Food Categories:</p>
    <label id="asian">Asian:
      <input type = "checkbox" name="asian"/>
    </label>
    <br>
    <label id="american">American:
      <input type = "checkbox" name="american"/>
    </label>
    <br>
    <label id="Italian">Italian:
      <input type = "checkbox" name="italian"/>
    </label>
    <br>

    <label id="submit">Submit:
      <input type="submit"/>
    </label>
</form>